{
  "name": "conjoinnetwork-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "port:free": "lsof -ti :4310 | xargs kill -9 2>/dev/null || true",
    "dev:4310": "pnpm port:free && PORT=4310 next dev --webpack",
    "dev:stable": "NEXT_DISABLE_TURBOPACK=1 next dev",
    "audit:forbidden": "node scripts/audit-forbidden-strings.mjs",
    "build": "node scripts/run-build.mjs",
    "build:trace-warnings": "NODE_OPTIONS=\"--trace-warnings\" node scripts/run-build.mjs",
    "build:ci": "CI=1 node scripts/run-build.mjs",
    "start": "next start",
    "start:4310": "pnpm port:free && PORT=4310 next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "qa:smoke": "bash scripts/ensure-workdir.sh && node scripts/qa-smoke.mjs",
    "qa:golive": "bash scripts/ensure-workdir.sh && node scripts/qa-golive.mjs",
    "qa:rfq": "bash scripts/ensure-workdir.sh && node scripts/qa-rfq-revenue-pass.mjs",
    "qa:rfq:persistence": "bash scripts/ensure-workdir.sh && node scripts/qa-rfq-persistence-check.mjs",
    "qa:rfq:shots": "bash scripts/ensure-workdir.sh && node scripts/capture-rfq-proof.mjs",
    "qa:phase2:shots": "bash scripts/ensure-workdir.sh && node scripts/capture-phase2-screenshots.mjs",
    "qa:phase3:shots": "bash scripts/ensure-workdir.sh && node scripts/capture-phase3-pipeline.mjs",
    "seo:check": "bash scripts/ensure-workdir.sh && node scripts/seo-check.mjs",
    "smoke": "bash scripts/ensure-workdir.sh && node scripts/smoke-runtime.mjs",
    "perf:check": "bash scripts/ensure-workdir.sh && node scripts/perf-check.mjs",
    "e2e": "bash scripts/ensure-workdir.sh && playwright test",
    "e2e:install": "playwright install chromium --with-deps",
    "rum:check": "bash scripts/ensure-workdir.sh && node scripts/rum-check.mjs",
    "seed:platform": "node --experimental-strip-types scripts/seed.ts"
  },
  "dependencies": {
    "next": "16.1.6",
    "nodemailer": "^8.0.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
