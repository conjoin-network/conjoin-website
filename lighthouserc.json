{
  "ci": {
    "collect": {
      "url": [
        "http://127.0.0.1:4310/",
        "http://127.0.0.1:4310/brands",
        "http://127.0.0.1:4310/solutions/workspace",
        "http://127.0.0.1:4310/contact",
        "http://127.0.0.1:4310/request-quote"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.95
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.75
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.95
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./artifacts/lhci"
    }
  }
}
